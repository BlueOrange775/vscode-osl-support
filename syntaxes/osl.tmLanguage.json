{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "OMSI Scripting Language",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
			{
				"name": "storage.modifier.osl",
				"match": "({if}|{else}|{endif})"
			},
			{
				"name": "entity.name.function.osl",
				"match": "(\\(L\\.L.+?\\)|\\(L\\.\\$.+?\\)|\\(L\\.S.+?\\)|l\\d+)"
			},
			{
				"name": "comment.line",
				"match": "(^'.*)"
			},
			{
				"name": "invalid.illegal",
				"match": "(\\s+'.*|\\s+{trigger:.+?}|\\s+{macro:.+?}|\\s+{end})"
			},
			{
				"name": "markup.inserted",
				"match": "(\\(T\\.L.+?\\))"
			},
			{
				"name": "constant.character.escape.osl",
				"match": "(\\(C\\.L.+?\\))"
			},
			{
				"name": "markup.heading",
				"match": "(\\&\\&|\\|\\||=|<=|>=|>|<|\\+|\\-|\\*|\\$=|\\$\\+|\\/|\\$\\*|min|max|sqr|arctan|trunc|exp|sgn)"
			},
			{
				"name": "storage.type.cs",
				"match": "(\\(S\\.L.+?\\)|\\(S\\.\\$.+?\\)|s\\d+)"
			},
			{
				"name": "entity.name.tag.osl",
				"match": "(^{frame}|^{init}|^{trigger:.+?}|^{macro:.+?}|^{end}|\\(M\\.L\\..+?\\))"
			},

			
			{
				"name": "entity.name.tag.osl",
				"match": "(^\\[.+?\\])"
			},
			{
				"name": "comment.line",
				"match": "(^#.*)"
			}
		]
		},
		"strings": {
			"name": "string.quoted.double.osl",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
				}
			]
		}
	},
	"scopeName": "source.osl"
}
