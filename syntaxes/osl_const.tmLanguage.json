{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "OMSI Constfile",
	"patterns": [
		{
			"include": "#keywords"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
			{
				"name": "storage.modifier.osl_const",
				"match": "^\\[pnt\\]"
			},
			{
				"name": "markup.heading",
				"match": "^\\[(const|newcurve)\\]"
			},
			{
				"name": "storage.type.cs",
				"match": "-?\\d+(?:\\.\\d+)?"
			},
			{
				"name": "comment.line",
				"match": "^('.*|#.*)"
			},
			{
				"name": "variable.other",
				"match": "(^.+)"
			}
		]
		}
	},
	"scopeName": "source.osl_const"
}
